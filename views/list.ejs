<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href="/images/favicon.ico" type="image/x-icon" />
    <title>Document</title>
    <link rel="stylesheet" href="/css/main.css" />
  </head>
  <body>
    <main>
      <div class="app-container">
        <div class="wave-box">
          <div class="wave -one"></div>
          <div class="wave -two"></div>
          <div class="wave -three"></div>
          <div class="wave -four"></div>
          <div class="wave -five"></div>
          <h1 class="title">Things To Do</h1>
        </div>
        <section class="app">
          <div class="app__date"><%- kindOfDay %></div>
          <form class="app__form" action="/" id="todoform" method="post">
            <img
              class="edit-still"
              src="/images/edit-still.svg"
              alt="edit icon image"
            />
            <input
              type="text"
              id="todo"
              name="newTask"
              placeholder="Do something..."
              autocomplete="off"
            />
            <button type="submit" for="todoForm">
              <img src="/images/send.svg" alt="send icon button image" />
            </button>
          </form>
            <section class="app__content">
              <ul class="app__content-list">
                <% for(let i in toDo) {%>
                <li>
                  <input class="check" type="checkbox" name="checkbox"></input>
                  <p><%= toDo[i] %></p>
                  <img src="/images/edit.svg" alt="edit button icon" />
                </li>
                <% } %>
              </ul>
            </section>
          <section class="app__status-bar">
            <p class="task-list"><span class="task-num">0</span> item left</p>
            <div class="task-sort">
              <p class="sort-all">all</p>
              <p class="sort-active">active</p>
              <p class="complete">complete</p>
            </div>
            <span class="span-wrap">
            <span>delete all</span><img class="del-all" src="/images/delete-all.svg" alt="delete all button image" /></span>
          </section>
        </section>
      </div>
    </main>
  </body>
</html>
